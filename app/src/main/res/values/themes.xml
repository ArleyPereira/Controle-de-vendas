<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ControleDeVendas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_hint</item>
        <item name="colorPrimaryVariant">@color/color_hint</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_hint</item>
        <item name="colorSecondaryVariant">@color/color_hint</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/color_hint</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Base_ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Search_View_Theme">
        <item name="colorSecondary">@color/color_hint</item>
        <item name="searchBackground">#FFFFFF</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">Digite o nome do produto</item>
        <item name="hintColor">#DED5FF</item>
        <item name="backIconTint">@color/color_hint</item>
        <item name="android:textColor">@color/color_hint</item>
        <item name="iconsTint">#673AB7</item>
    </style>

</resources>